  .ctsform .control-block-x3inp .inputs {display: flex; flex-direction: row;justify-content: space-between;margin-top:5px;}
  .ctsform .control-block-x3inp .inputs div {flex: auto;}

  .ctsform .finfo { font-size:smaller; color:#666; }
  .ctsform .finfo-c { text-align:center; }

  .ctsform .vmsg { display:block; position:relative; top:-5px; font-size:smaller; }
  .ctsform .vmsg.invalid { color:#ff5656; font-family: "Open Sans Bold"  }

  .ctsform .msg-block { clear:both; margin-bottom:10px; display:block; padding:10px; background-color:#fff; border: solid 1px #fff; color:#333; border-radius:3px; font-size:14px; line-height:150%;  }
  .ctsform .msg-block.success { background-color:#ABF8B6 !important; border-color: #39D659; color:#006D00 !important; }
  .ctsform .msg-block.error { background-color:rgba(226, 68, 71, 0.1) !important; border-color: #E24447; color:#E24447 !important; }
  .ctsform .msg-block.warning { background-color:#FFEA9F !important; border-color: #FFCD17; color:#613400 !important; }
  .ctsform .msg-block.notification { background-color:#5CC7EB; border-color: #00B1E5; color:#fff; }

  .ctsform .tac { text-align: center; }
  .ctsform .tal { text-align: left; }
  .ctsform .dn { display:none }

  @media desktop-and-above {
  .ctsform button:hover, a.button:hover, .buttons button:hover { color: #fff; background: #0096C9; }
  .ctsform .linkbut:hover { cursor:pointer; color:#242870; background-color:transparent; outline:none; }
  }

  @media (min-width: 601px) {
  .ctsform .half { width:49%; float:left; }
  .ctsform .half:nth-child(2n+1) { clear:left; padding-right:1%; }
  .ctsform .half:nth-child(2n+2) { width:50%; }
  .ctsform .third { width:33%; float:left; }
  .ctsform .third:nth-child(3n+1) { padding-right:1%; clear:left; }
  .ctsform .third:nth-child(3n+2) { padding-right:1%; }
  .ctsform .third:nth-child(3n+3) { width:33%; }
  }

  .clearafter:after { visibility: hidden; display: block; font-size: 0; content: " "; clear: both; height: 0; }


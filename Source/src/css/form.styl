@import "config"
  .ctsform-stepindicators { text-align: center; padding-bottom:25px; }
  .ctsform-stepindicators span { display:inline-block; width:28px; font-size:12px; line-height:26px; border:solid 1px dodgerblue; border-radius:14px; box-sizing:border-box; }
  .ctsform-stepindicators span.active { color:#fff; background-color:dodgerblue; border-color:dodgerblue; }
  .ctsform-stepindicators span + span { margin-left:5px; }

  .ctsform { text-align:left; font-size: 14px; line-height: 20px; font-weight: normal; }

  .ctsform .legend{ margin-bottom:15px; padding:0; display:block; font-weight:bold; text-align:center; }
  .ctsform .control-block { clear:both; margin-bottom:15px; display:block; position:relative; }
  .ctsform .control-block.nomarg{ margin-bottom:0; }
  .ctsform .form-actions{ clear:both; margin-bottom:0; display:block; text-align:center; }
  .ctsform .form-actions input[type=text]{ display:inline-block; width:auto; }
  .ctsform .form-actions buttom + buttom { margin-left: 30px; }

  .ctsform input[type=text],
  .ctsform input[type=number],
  .ctsform input[type=password],
  .ctsform input[type=email],
  .ctsform input[type=url],
  .ctsform input[type=tel],
  .ctsform select {
    box-sizing:border-box;
    padding:30px 10px 5px;
    width:100%;
    clear:both;
    display:block;
    position:relative;
    z-index:5;
    color:#505050;
    font-family: "Open Sans SemiBold" !important;
  }

  .ctsform input:focus,
  .ctsform select:focus { outline:none; }
  .ctsform input[disabled],
  .ctsform select[disabled] { color: #666; opacity: 1!important;-webkit-text-fill-color: #666;}

  .ctsform .control-elm { font-size: 16px; line-height: 20px; font-weight: normal; }
  .ctsform .control-elm.disabled { color: #999; }

  .ctsform .control-label { position:absolute; z-index:1; top:0; right:0; left:0; height:55px; padding:30px 10px 0; line-height:20px;  transition: all 0.1s ease-in; }
  .ctsform .control-label:after { content:""; position:absolute; right:0; bottom:0; left:0; height:1px; background-color:#ddd; }
  .ctsform .control-label.inactive:after { background-color:#fefefe; }
  .ctsform .filled .control-label,
  .ctsform .pseudofilled .control-label { padding-top:0; font-size:12px; color:#999; }
  .ctsform input:focus + .control-label,
  .ctsform select:focus + .control-label,
  .ctsform .withfocus .control-label { padding-top:0; font-size:12px; color:#368ffe; background-color:#f6f6f6; }
  .ctsform input:focus + .control-label:after,
  .ctsform select:focus + .control-label:after
  .ctsform .withfocus .control-label:after { background-color:#368ffe; }

  .ctsform button
    background: #1a9ddd repeat scroll 0 0 !important;
    border: 0 none;
    cursor: pointer;
    display: inline-block;
    margin-bottom: 0;
    padding: 0 25px;
    font-family: 'Open Sans SemiBold';
    color: #fff;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
    text-transform: uppercase

    &:first-child
      margin-left: 0

  .ctsform .linkbut,
  .ctsform button.linkbut { background-color:transparent; line-height:150%; text-shadow: none; color:#242870; padding: 0; }
  .ctsform .linkbut:focus { outline:none; }

  .ctsform .control-block-dob input { display:inline-block; width:28%; }
  .ctsform .control-block-dob input:nth-child(-n+3):after { content:" / "; color:#999; }


@import "config"

.marketgroup
  .hheader
    .head
      cursor: pointer
      margin: 0
      color: #fff
      cursor default
      font-size: 14px
      font-style: normal
      font-stretch: normal
      font-weight: bold
      line-height: normal
      padding 10px 9px
      min-width 0
      flex 5
      @media mobile-big-and-below
        padding 10px 0 10px 10px
      h4
        font-size 14px
        text-transform uppercase
        white-space nowrap
        display block
        text-overflow ellipsis
        overflow hidden
        font-weight: normal
  .coupon.group-by-date
    .date.live
      .event
        border-top 1px solid #cfd6db
        display block
        .info-markets-container
          padding 12px 5px 0px 9px
          display flex
          align-items center
          .event-info
            flex 1
            cursor default
            .eventTitleWrapper
              margin-top 0px !important
              margin-bottom 0px
              @media mobile-big-and-below
                margin-bottom 0px
              &:last-child
                margin-bottom 0
              .eventTitle
                line-height 21px
                .pitcher-name
                  margin-top: -5px
              .showResult
                .score-value
                  //padding 0 7.5px
        .info-markets-container.GOLF,
        .info-markets-container.MOTORSPORT,
        .info-markets-container.NASCAR
          padding unset
          .markets
            .market
              .market-name
                display none
              .selection-wapper.selection-data
                padding 9px 9px
                // margin 2px 0
                .value.suspended
                  .igt-icon
                    // line-height 18px
        .info-markets-container
          .market-name
              display none

  .coupon-event
    .market
      .markets-container
        .markets
          .market
            .market-name
              display none
        .markets.single
          .market
            .flex-more3-container
              .selections
                display flex
                padding 5px 0
                &.active
                  .selection
                    .selection-wapper
                      .value
                        .selectionprice
                            color white
            &.three-and-more-selections
              .selections-mobile
                .selection-wapper
                  display flex
                  cursor default
                  pointer-events visiblefill
                  user-select none
                  padding 5px 12px
                  .name.names
                    font-size 14px
                    color #000
                    // overflow hidden
                    line-height: 1.3
                    margin-right: 3px
                    // padding-top 8px
                    // flex 1
                    // text-overflow ellipsis
                    // white-space nowrap
                    width 0
                  .value
                    height 100%
                    .sh
                      background #f2f2f2
                      padding 13px 9px
                      width 60px
                      min-height 40px
                      font-size 14px
                      color #0b4da1
                      text-align center
                      cursor pointer
                      display flex
                      flex-direction: column
                      justify-content: center
                      height 100%
                      pointer-events auto
                      .selectionprice
                        line-height 13px
                        color #0b4da1
                        // font-weight 700
                      .selectionprice.varylongprice
                        font-size 12px !important
                .longprice-selection
                  .sh
                    padding: 13px 0px !important

                &.active
                  .selection-wapper
                    background-color white!important
                    .name.names
                      background-color white!important
                      color #000 !important
                    .value
                      background-color white!important
                      .sh
                        background-color #157cc1  !important
                        color #fff !important
                        border-radius 0px
                        .selectionprice
                          color white

            .selections
              &.handicap
                .selection
                  .selection-wapper
                    padding 4px
          .big3
            .market
              .selection
              .selection-wapper
                padding 0
                // margin 2px 0px
                .value
                  display flex
                  min-width 30%
                  @media mobile-big-and-below
                    min-width 50px
                  .had-value
                    // flex 1
                  .sh
                    flex 1
                    .currenthandicap
                      font-weight 700
                .value.suspended
                  .had-value
                    display none
            .market.money
              .selection
                .selection-wapper
                  .value
                    display flex
                    .selectionprice
                      // line-height 38px
                      font-weight 700
        .markets.multiple
          .big3
            .market
              .selection
              .selection-wapper
                padding 0
                // margin 2px 0px
                .value
                  display flex
                  min-width 30%
                  @media mobile-big-and-below
                    min-width 50px
                  .had-value
                    // flex 1
                  .sh
                    flex 1
                  .currenthandicap
                    .uo-currenthandicap

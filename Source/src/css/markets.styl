                .value.suspended
                  .had-value
                    display none
  .big-three-one-selection-per-event
    .empty
      display none

.eventmarketgroup
  .markets
    .market
      margin-top 2px
      // @media mobile-big-and-below
      //   margin 0 4px 2px
      .parent
        display flex
        padding 10px 15px
        background #fff
        border 1px solid #dcdfe9
        border-top-style hidden
        border-bottom-left-radius 0px
        border-bottom-right-radius 0px
        .market.name
          flex 1
          .layout
            height: 35px
            line-height 40px
            font-size 14px !important
            color #1f375b
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            cursor default
            display block
        .selections-container
          flex 1
          padding 10px 0
          .selections
            &.handicap
              .selection-wapper
                padding 4px
            .selection
              margin 2px
      &.three-and-more-selections
        .parent
          .market.name
            display none
          .flex-more3-container
            .selections
              display flex
              padding 5px 0
              @media mobile-big-and-below
                padding 0
              &.active
                .selection
                  .selection-wapper
                    .value
                      .selectionprice
                          color white
              .selectionname
                flex 1
                font-size 14px
                color #1f375b
                overflow hidden
                text-overflow ellipsis
                line-height 40px
              .selection
                flex 1
                justify-content flex-end
                .selection-wapper
                  flex 0.33
          .selections-container
            padding 0
            @media mobile-big-and-below
              padding 0
            .selections-mobile
              .selection-wapper
                display flex
                cursor default
                pointer-events none
                user-select none
                padding 5px 12px
                @media mobile-big-and-below
                  padding 5px 12px
                .name.names
                  font-size 14px
                  color #1f375b
                  overflow hidden
                  padding-top 8px
                  flex 1
                .value
                  flex 1
                  display flex
                  justify-content flex-end
                  .sh
                    flex 0.33
                    background #f0f3f8
                    padding 13px 9px
                    min-width 5rem
                    font-size 14px
                    color #111
                    text-align center
                    cursor pointer
                    display block
                    pointer-events auto
                    .selectionprice
                      line-height: 18px;
                      color #0090ff
                      font-weight 700
              &.active
                .selection-wapper
                  background-color white!important
                  .name.names
                    background-color white!important
                    color #1f375b!important
                  .value
                    background-color white!important
                    .sh
                      background-color #0090ff !important
                      color #fff !important
                      border-radius 3px
                      .selectionprice
                        color white
          &.selections-in-columns
            .selections-container
              .selections
                .selection-name,
                .selectionname
                  cursor: default
                .selection
                  display flex
                  width 33%
                  @media mobile-big-and-below
                    display flex
                    width 100%
                  .selection-wapper
                    width: 60px
                    margin 0px
            .selections-mobile
              .value
                flex unset!important
        .selections-container
          // outright and threeplus on eventmarket group
          .flex
            border-left: 1px solid #cfd6db
            border-right: 1px solid #cfd6db
          .flex:not(.selection)
            border-bottom 1px solid #cfd6db
            border-bottom-left-radius 5px
            border-bottom-right-radius 5px
            .flex-more3-container
              display block
              width 100%
              // padding: 0px 0 0 15px
              .flex-item
                display inline-block
                vertical-align: top
                .selections
                  display: flex
                  justify-content: space-between
                  padding: 8px 12px
                  // .selectionprice
                  //   line-height: 1
                  &.active
                    .selectionprice
                      color white
                  .selectionname
                    font-size: 14px
                    // line-height: 40px
                    color: #1f375b
                    // overflow: hidden
                    // text-overflow: ellipsis
                    // display: inline-block
                    display: flex
                    flex-direction: column
                    justify-content: center
                    line-height: 1.3
                    margin-right: 3px
                    // white-space: nowrap
                    cursor: default
                    width: 100%
                  .selection.layout
                    display block
                    flex unset
              &.one-column
                .flex-item
                  display: block
                  .selections
                    .selectionname
                      width: initial
                    .selection.layout
                      width 130px

              &.two-columns
                .flex-item
                  width 50%
              &.three-columns
                .flex-item
                  width 33.6%
              &.two-columns, &.three-columns
                display: flex
                .flex-item
                  border-right: 1px solid #cfd6db
                  height: 100%
                  // padding-bottom: 5px
                  &:last-child
                    border-right: none
                  .selections
                    border-bottom: 1px solid #cfd6db
                    .selection.layout
                      width: 60p
                      min-width: auto
                      .selection-wapper
                        // padding: 13px 9px
                        width: 60px
                        height: 100%
                        min-height: 40px
                        font-size: 14px
                        color: #111
                        text-align: center
                        cursor: pointer
                        display: flex
                        pointer-events: auto
                      // .selection-wapper.longprice-selection
                      //   padding: 13px 0px !important
                    &:last-child
                      border-bottom: none
            .selections-mobile
              width: 100%
              display: flex
              border-right: none
              &.active
                .selection-wapper
                  background-color: white!important
                  .name.names
                    background-color: white!important
                  .value
                    .selectionprice
                      color: white
              .selection-wapper
                padding 5px 12px
                cursor: default
                .name.names
                  font-size: 14px
                  color: #1f375b
                  // overflow: hidden
                  // text-overflow: ellipsis
                  max-width: 100%
                  display: inline-block
                  vertical-align: middle
                  // white-space: nowrap
                  width: 0
                  // height: 42px
                  line-height: 1.3
                  margin-right: 3px
                .value
                  padding: 13px 9px
                  width: 60px
                  height: 100%
                  font-size: 14px
                  text-align: center
                  cursor: pointer
                  display: block
                  pointer-events: auto
                  background-color #f2f2f2
                  .sh
                    height 100%
                    display: flex
                    flex-direction: column
                    justify-content: center
                  .selectionprice
                    line-height: 13px
                    font-weight: 700
                    color: #0e4fa2
              .longprice-selection
                .value
                  padding: 13px 0px !important
        &.three
          .selections-container
            .selection
              border-left none
              border-top: none
      &.two-selections
        .selections-in-columns
          .selections-container
            .selection
              &.U,
              &.H
                border-right 1px solid #cfd6db
                width: 50%
                display inline-block
                @media mobile-big-and-below
                  border-right none
                  display flex
                  width auto
                .selection-name
                  cursor default
              &.O,
              &.A
                width: 50%
                display inline-block
                @media mobile-big-and-below
                  display flex
                  width auto
                .selection-name
                  cursor default
              .selection-wapper
                width 60px
                margin 0px !important
    .market
      .selections
        .selection
          &.active
            .selection-wapper.selection-data
              background #157cc1
              .currenthandicap
                color white
          .selection-column.active
            .selection-wapper.selection-data
              background #157cc1
  .big3

    .market
      .selection
        .selection-wapper
          padding 0
          margin 2px 1px
          .value
            min-width 30%
            display inline-block
            @media mobile-big-and-below
              min-width 40px
            .sh
              flex 1
              .currenthandicap
                display flex
                font-weight bold
                justify-content center
                .had-value
                  // flex 1
                  // line-height 35px
                .uo-currenthandicap
                  //flex 1

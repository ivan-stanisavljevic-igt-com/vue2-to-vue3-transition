@import "mixins"

.site-navigation
  ul
    padding 0

.site-navigation,
.bo-navigation
  margin: 0
  padding: gap 0

  &,
  ul
    list-style: none

.dialog-menu,
.left-column
  ul
    margin: 0

    &.site-navigation,
    &.bo-navigation
      padding: 5px 0
      list-style: none
      font-size: 14px

      .badge
        font-size: 12px
        &.small
          font-size: 10px
          height: 23px
          width 23px
          padding: 2px

      &.gap
        padding: gap

      li
        a
          padding: 6px 0
          display: block

          &.active,
          &.router-link-active
            font-weight: bold
            background-color: transparent !important

        &:first-child
          padding-top: 0

      &.popular
        li
         //  override-svg-icon(icon-names, 'white', '#274B7D')

  .main-navigation
    ul.site-navigation
      padding-top: 5px

.dialog-menu
  padding: gap

  &,
  a
    color: color-black-carbon-light

  .close
    position: absolute
    right: gap

    .btn
      min-width: 0
      box-shadow: none

      .btn__content
        padding: 0 5px

      .icon
        font-size: 2.7rem
        font-weight: bold

  .logo-wrapper
    flex-grow: 0
    flex-shrink: 1

  .sports-menu .bo-navigation
    background-color: transparent

  &.hamburger
    .header
      .close
        position: absolute
        min-width: unset
        top: 5px
        right: 0

  .header
    background: #0b4da1
    background-position: 0px -19px
    background-repeat: no-repeat
    background-size: cover
    color: #fff
    padding: 11px 15px 11px
    margin-top: -15px
    margin-left: -15px
    margin-right: -15px
    display flex
    justify-content: space-between
    align-items: center
    .v-icon
      color #fff !important
    .layout
      align-items: center


    .header-info
      .float-left
        margin: -18px 0 10px

        span
          margin: 0

      .float-right
        display: none

    .logo
      margin-right: 15px

      img
        height 28px


.main-navigation
  padding: 0 gap

  @media mobile-big-and-below
    padding: 0

  .site-navigation
    padding: 0

  @media tablet-and-above
    &:before
      display none

    h3
      display: none

    li
      display: inline-block
      margin-right: 10px

      &:last-child
        margin-right: 0

      a
        display: block
        text-decoration: none
        padding: 10px 8px
        font-size: 14px
        text-transform: uppercase


        &.router-link-active
          font-family 'Open Sans Bold'
          position: relative
  ul
    padding: 0
    margin: 0
    list-style: none


  @media tablet-and-above
    ul
      display: inline-block

      li
        display: inline-block

        a
          display: inline-block


    .menu-btn
      display: none

.sports-menu
  h3-gap = 5px

  a
    color: #445057
    @media mobile-big-and-below
      width: 100%

  h3,
  .site-navigation h3
    display: block
    font-size: 20px
    color: #213859
    margin-bottom: h3-gap
    text-transform: uppercase

  .sports-az
    h3
      margin-bottom: h3-gap

    ul
      padding: 0

  .expand,
  .expand.site-navigation
    expand(gap, horizontal)
    padding: gap
  .expand.site-navigation
    // min-height: 300px

  .navigation
    margin-bottom: gap

    .navigation-item
      display: flex
      align-items: center

      &:hover a
      a.active
        color: #0b4da1

      .igt-icon
        margin-right: 10px
        margin-top: -1px
        .icon-icehockey
          width: 17px
          height: 18px
        .icon-history
          width: 15px
          height: 20px
        .icon-horseracing
          width: 30px !important
          height: 25px !important
          margin-left -10px
        > span
          width: 20px
          height: 20px


.navigation
  &:not(.popular)
    .navigation-item
      &:hover a
      a.active
        override-svg-icon(icon-names, 'blue')

.navigation
  &.popular
    .navigation-item
      display: flex
      align-items: center

     &:hover a
     a.active
       color #fff
       font-weight:bold
       override-svg-icon(icon-names, 'white')

@media mobile-big-and-below
  .sports-menu
    .navigation
      hr
        margin 10px -15px 10px
        display block
        height 1px
        border 0
        border-top 1px solid #c2cbd1

      &:not(.popular)
        a
          color: #1f375b
          padding: 13.5px 0
          override-svg-icon(icon-names, 'blue')
        .navigation-item
          .igt-icon
            > span
              width: 20px
              height: 20px
            .icon-history
              width: 14px
              height: 19px
    .main-navigation
      .navigation
        a.router-link-exact-active
          override-svg-icon(icon-names, 'blue')
        a.router-link-active:not(.router-link-exact-active)
          font-weight normal

.sportmenu-mobile-scrollbar
    position: relative
    width: 100%

    .sport.section
      display: inline-block
      margin: 5px
      cursor: pointer
      min-width: 65px
      text-overflow: ellipsis
      text-align: center

      .igt-icon
        width: 44px
        height: 44px
        margin-bottom: 4px

        > span
          width: 20px
          height: 20px

        .icon-icehockey
          width:19px

      .mobile-menu-text
        text-align: center
        color: #fff !important
        font-size: 12px
      &.active
        background-color: initial !important
        position: relative


.sportmenu-mobile-scrollbar a
  text-decoration: none
  display: inline-block
  display: inline-flex
  flex-direction: column
  align-items: center

.sportmenu-mobile-scrollbar
  overflow-x: auto
  overflow-y: hidden
  -ms-overflow-style: -ms-autohiding-scrollbar
  -webkit-overflow-scrolling: touch
  white-space: nowrap
  padding-bottom: 9px
  @media mobile-big-and-below
    background-color #06283b

.sportmenu-mobile-scrollbar::-webkit-scrollbar
  display: none


.navigation-group
  .router-link-exact-active.router-link-active
    color #0b4da1 !important
.v-navigation-drawer
  z-index 20
  .router-link-exact-active.router-link-active
    color #0b4da1 !important
.top-container
  .navigation-group
    .router-link-exact-active.router-link-active
      color #fff !important

.browser-internet-explorer
  .left-column
    ul
      &.site-navigation
        .badge
          font-size: 12px
.site-navigation.popular
  .igt-icon
    > span
      width: 20px !important
      height: 20px !important
    .icon-horseracing
      width: 28px !important
      height: 25px !important
      margin-left -8px
    .icon-nbaleague
      width: 15px !important
      height: 35px !important
